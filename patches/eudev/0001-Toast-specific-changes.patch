@@ -82,7 +80,7 @@ size_t page_size(void) {
         if (_likely_(pgsz > 0))
                 return pgsz;
 
-        r = sysconf(_SC_PAGESIZE);
+        r = sysconf(_SC_PAGE_SIZE);
         assert(r > 0);
 
         pgsz = (size_t) r;
